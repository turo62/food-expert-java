<?xml version="1.0" encoding="utf-8"?>
<Rules>
    <Rule id="experience">
        <Question>Have you ever walked in the mountains?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="season">
        <Question>What is the time of the year?</Question>
        <Answer>
            <Selection value="true">
                <MultipleValue value="spring,summer,autumn"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="winter"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="transport">
        <Question>You are driving your own car or are you going by bus?</Question>
        <Answer>
            <Selection value="true">
                <MultipleValue value="car,own car,my own car"/>
            </Selection>
            <Selection value="false">
                <MultipleValue value="bus,by bus"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="family">
        <Question>Is this a family trip?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="dog">
        <Question>Are you taking your dog with you?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="money">
        <Question>Do you prefer this trip to be cheaper or more expensive?</Question>
        <Answer>
            <Selection value="true">
                <MultipleValue value="cheap,cheaper"/>
            </Selection>
            <Selection value="false">
                <MultipleValue value="expensive,more expensive"/>
            </Selection>
        </Answer>
    </Rule>
</Rules>