<?xml version="1.0" encoding="utf-8"?>
<Rules>
    <Rule id="mealtype">
        <Question>What meal would you like?</Question>
        <Answer>
            <Selection value="true">
                <MultipleValue value="breakfast,dinner,lunch"/>
            </Selection>
            <Selection value="false">
                <MultipleValue value="cake,sweet,confectionary"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="foodstyle">
        <Question>What style of food do you prefer?</Question>
        <Answer>
            <Selection value="true">
                <MultipleValue value="fast food, street food,junk food,fast,street"/>
            </Selection>
            <Selection value="false">
                <MultipleValue value="quality,fine dining,restaurant"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="foodtype1">
        <Question>Do you like Italian food?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="foodtype2">
        <Question>Do you like hungarian food?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="foodtype3">
        <Question>Do you like fat food?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="price">
        <Question>What price range do you prefer?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="cheap"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="expensive"/>
            </Selection>
        </Answer>
    </Rule>
</Rules>
